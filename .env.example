# Database (default: SQLite, no setup required; uncomment for PostgreSQL)
# DATABASE_URL=sqlite:///./data/daytrade.db
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/daytrade

# Application Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Session: US RTH 9:30 AM – 4:00 PM Eastern (market open/close)
# SESSION_START_TIME=09:30
# SESSION_END_TIME=16:00
# SESSION_TIMEZONE=America/New_York
# Session candle capture (9:31–16:00) is long-running; default False
# ENABLE_SESSION_CANDLE_CAPTURE=False

# Scheduled data collection (runs at session open and close when API is running)
ENABLE_SCHEDULED_COLLECTION=True
# Set to False to skip screenshot capture (no Selenium)
COLLECTION_CAPTURE_SCREENSHOTS=True
# Seconds to wait for chart to load before screenshot (default 15)
# COLLECTION_CHART_WAIT_SECONDS=15

# Optional: TradingView credentials (for chart screenshot — login gives full chart access)
# TRADINGVIEW_USERNAME=your_username_or_email
# TRADINGVIEW_PASSWORD=your_password

# Chart timeframe in minutes for screenshots (1, 5, 15, 60, 240, 1440); default 15
# CHART_INTERVAL_MINUTES=15


# Set to False to show browser window when capturing (debug login / delay)
# TRADINGVIEW_HEADLESS=False


# True = open sign-in, click Email, then wait for you to log in in the browser; then screenshot is taken
# TRADINGVIEW_MANUAL_LOGIN=True

# Seconds to wait after login for redirect; increase if login is slow
# TRADINGVIEW_LOGIN_WAIT_SECONDS=15

# Training (defaults: BATCH_SIZE=64, LEARNING_RATE=1e-4, NUM_EPOCHS=200)
# BATCH_SIZE=64
# LEARNING_RATE=1e-4
# NUM_EPOCHS=200

# Model architecture (must match at train and inference; change = retrain)
# NUM_LSTM_LAYERS=2
# LSTM_HIDDEN_SIZE=128
# MLP_HIDDENS=256,256,128
# CNN_TRAINABLE_PARAM_GROUPS=10
# 0 = unfreeze all CNN layers
