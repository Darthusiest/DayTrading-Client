# Database (default: SQLite, no setup required; uncomment for PostgreSQL)
# DATABASE_URL=sqlite:///./data/daytrade.db
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/daytrade

# Polygon.io API Configuration
POLYGON_API_KEY=your_polygon_api_key_here

# Application Configuration
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Scheduled data collection (runs at 6:30 AM and 8:00 AM PST when API is running)
ENABLE_SCHEDULED_COLLECTION=True
# Set to False to only fetch Polygon price data (no Selenium screenshots)
COLLECTION_CAPTURE_SCREENSHOTS=True

# Optional: TradingView credentials (for screenshot capture only)
# TRADINGVIEW_USERNAME=your_username
# TRADINGVIEW_PASSWORD=your_password
